<odoo>



<record id="classroom_form_view" model="ir.ui.view">
    <field name="name">classroom.form</field>
    <field name="model">classroom.university</field>
    <field name="arch" type="xml">
        <form string="Classroom">
            <sheet>
                <group>
                    <field name="num_id"/>
                    <field name="teacher"/>
                </group>
            </sheet>
        </form>
    </field>
</record>

<record id="classroom_tree_view" model="ir.ui.view">
    <field name="name">classroom.list</field>
    <field name="model">classroom.university</field>
    <field name="arch" type="xml">
        <list>
            <field name="num_id"/>
            <field name="teacher"/>
        </list>
    </field>
</record>

<record id="classroom_action" model="ir.actions.act_window">
    <field name="name">Classroom</field>
    <field name="res_model">classroom.university</field>
    <field name="view_mode">list,form</field>
</record>
</odoo>