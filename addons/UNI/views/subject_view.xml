<!-- SUBJECT -->
<!-- ================================================== -->
<odoo>
<record id="subject_form_view" model="ir.ui.view">
    <field name="name">subject.form</field>
    <field name="model">subject.university</field>
    <field name="arch" type="xml">
        <form string="Subject">
            <sheet>
                <group>
                    <field name="name"/>
                    <field name="value"/>
                </group>
            </sheet>
        </form>
    </field>
</record>

<record id="subject_tree_view" model="ir.ui.view">
    <field name="name">subject.list</field>
    <field name="model">subject.university</field>
    <field name="arch" type="xml">
        <list>
            <field name="name"/>
            <field name="value"/>
        </list>
    </field>
</record>

<record id="subject_action" model="ir.actions.act_window">
    <field name="name">Subject</field>
    <field name="res_model">subject.university</field>
    <field name="view_mode">list,form</field>
</record>

</odoo>