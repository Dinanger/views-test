<odoo>

    <!-- FORM VIEW -->
    <record id="hm_university_form_view" model="ir.ui.view">
        <field name="name">hm.university.form</field>
        <field name="model">hm.university</field>
        <field name="arch" type="xml">
            <form string="Salary Record">
                <sheet>
                    <group>
                        <field name="po"/>
                        <field name="salary"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- LIST VIEW (NO TREE) -->
    <record id="hm_university_list_view" model="ir.ui.view">
        <field name="name">hm.university.list</field>
        <field name="model">hm.university</field>
        <field name="arch" type="xml">
            <list>
                <field name="po"/>
                <field name="salary"/>
            </list>
        </field>
    </record>

    <!-- ACTION -->
    <record id="hm_action" model="ir.actions.act_window">
        <field name="name">Salaries</field>
        <field name="res_model">hm.university</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
